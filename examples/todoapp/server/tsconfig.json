{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src-gen",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": false
  },
  "include": ["src-gen/**/*.ts"]
}

