{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "mime": ["./shims/mime.d.cts"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src-gen",
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": false
  },
  "include": ["src-gen/**/*.ts", "shims/**/*.d.ts", "shims/**/*.d.cts"]
}
