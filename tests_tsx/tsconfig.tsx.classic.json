{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "types": ["node", "react", "react-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src-gen-tsx",
    "outDir": "./dist-tsx",
    "verbatimModuleSyntax": true,
    "skipLibCheck": false,
    "jsx": "react"
  },
  "include": ["src-gen-tsx/**/*.tsx"]
}
