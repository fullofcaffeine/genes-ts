{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "types": ["node"],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./out/src-gen",
    "outDir": "./out/dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": false
  },
  "include": ["out/src-gen/**/*.ts"]
}
