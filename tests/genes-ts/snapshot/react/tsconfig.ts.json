{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "types": ["node", "react", "react-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./out/ts/src-gen",
    "outDir": "./out/ts/dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": false,
    "jsx": "react-jsx"
  },
  "include": ["out/ts/src-gen/**/*.ts", "out/ts/src-gen/**/*.tsx"]
}
