{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "react": ["./shims/react.d.ts"],
      "react-dom/server": ["./shims/react-dom-server.d.ts"]
    },
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./out/src-gen",
    "outDir": "./out/dist",
    "verbatimModuleSyntax": true,
    "skipLibCheck": false
  },
  "include": ["out/src-gen/**/*.ts", "ambient.d.ts", "shims/**/*.d.ts"]
}
